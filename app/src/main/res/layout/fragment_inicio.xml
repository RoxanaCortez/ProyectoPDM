<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/inicio"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_bg_home"
    tools:context=".Fragments.Inicio">

    <ImageView
        android:layout_width="match_parent"
        android:alpha="0.6"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/logo_image"></LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="@dimen/small_margin"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:elevation="@dimen/small_margin"
           android:layout_margin="@dimen/small_margin"
            app:cardCornerRadius="@dimen/small_margin"
            >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small_margin"
                   >

                    <at.markushi.ui.CircleButton
                        android:id="@+id/btn_parents"
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        app:cb_color="#FF0000"
                        android:layout_gravity="center"
                        app:cb_pressedRingWidth="16dp"
                        android:src="@drawable/parents_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Padres"
                        android:layout_gravity="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        />
                </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            app:cardCornerRadius="@dimen/small_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/small_margin">

            <at.markushi.ui.CircleButton
                android:id="@+id/btn_games"
                android:layout_width="128dp"
                android:layout_height="128dp"
                app:cb_color="#F8FF00"
                android:layout_gravity="center"
                app:cb_pressedRingWidth="16dp"
                android:src="@drawable/games1_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juegos"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textSize="18sp"
                />

        </LinearLayout>
        </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/small_margin"
                android:layout_margin="@dimen/small_margin">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small_margin">

                    <at.markushi.ui.CircleButton
                        android:id="@+id/btn_about"
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        app:cb_color="#00D3FF"
                        android:layout_gravity="center"
                        app:cb_pressedRingWidth="16dp"
                        android:src="@drawable/about_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acerca de"
                        android:layout_gravity="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/small_margin"
                android:layout_margin="@dimen/small_margin">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/small_margin">

                    <at.markushi.ui.CircleButton
                        android:id="@+id/btn_help"
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        app:cb_color="#FD019D"
                        android:layout_gravity="center"
                        app:cb_pressedRingWidth="16dp"
                        android:src="@drawable/help_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ayuda"
                        android:layout_gravity="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_salir"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end|bottom|center"
        android:layout_margin="@dimen/medium_margin"
        android:background="@drawable/home2_icon"
        android:tint="@color/darkgray"
        android:textColor="#fff" />

   <ImageButton
        android:id="@+id/musica"
        android:layout_margin="@dimen/medium_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/music_icon"/>

</FrameLayout>

