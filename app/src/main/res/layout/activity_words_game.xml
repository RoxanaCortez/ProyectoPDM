<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.WordsGame"
    android:id="@+id/words"
    android:background="@drawable/gradient_green">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="top|center"
        android:alpha="0.6"
        android:background="@drawable/clouds_icon"
        />
<ImageView
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:alpha="0.3"
    android:background="@drawable/mountains_icon"
    android:layout_gravity="center
"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="end|bottom"
        android:alpha="0.2"
        android:background="@drawable/tree2_icon" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/medium_margin"
        android:background="@drawable/basket_icon"
        android:alpha="0.3"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="#fff"
                android:orientation="vertical"
                android:alpha="0.7"
                android:gravity="center"
                android:padding="@dimen/small_margin"
                android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_puntos"
            android:text="Puntos: "
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:textColor="#000"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="@font/bree_serif"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/txt_num"
            android:text="0"
            android:layout_marginLeft="10dp"
            android:textSize="25sp"
            android:fontFamily="@font/bree_serif"
            android:textColor="#000"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <TextView
        android:id="@+id/txt_numP"
        android:text="Palabra: "
        android:layout_marginTop="@dimen/small_margin"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_pag"
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:text="1"/>

</LinearLayout>

            </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="50dp"
            app:cardCornerRadius="@dimen/big_margin"
            android:alpha="0.9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="@dimen/medium_margin"
            android:id="@+id/img_fruta"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

                <TextView
                    android:id="@+id/txt_fruta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/medium_margin"
                    android:fontFamily="@font/sofadi_one"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="22sp"
                    app:fontFamily="@font/baloo" />



            </LinearLayout>


        </androidx.cardview.widget.CardView>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">
        <Button
            android:id="@+id/btn_opc1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/leaf2_icon"
            android:text=""
            android:layout_margin="@dimen/small_margin"
            android:textColor="#000"
            android:textSize="22sp"
            android:fontFamily="@font/baloo"/>

        <Button
            android:id="@+id/btn_opc2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/small_margin"
            android:background="@drawable/leaf2_icon"
            android:text=""
            android:textColor="#000"
            android:textSize="22sp"
            android:fontFamily="@font/baloo"/>
        <Button
            android:id="@+id/btn_opc3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/small_margin"
            android:background="@drawable/leaf2_icon"
            android:text=""
            android:textColor="#000"
            android:textSize="22sp"
            android:fontFamily="@font/baloo"/>

</LinearLayout>

<Button
    android:id="@+id/btn_finalizar"
    android:layout_width="200dp"
    android:layout_margin="30dp"
    android:layout_height="wrap_content"
    android:text="Terminar"
    android:alpha="0.8"
    android:textAllCaps="false"
    android:textColor="#fff"
    android:fontFamily="@font/bree_serif"
    android:textSize="16sp"
    android:background="@drawable/rounded_shape_red"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_atras"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end|bottom|center"
        android:layout_margin="@dimen/medium_margin"
        android:background="@drawable/home2_icon"
        android:tint="@color/darkgray"
        android:textColor="#fff" />
</FrameLayout>