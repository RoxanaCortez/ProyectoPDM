<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.InstruccionFinal"
    android:background="@drawable/gradient_bg_help">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="@dimen/small_margin">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/small_margin"
            android:layout_margin="@dimen/big_margin"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="410dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/alphabet_icon"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="@dimen/medium_margin"
                    />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/darkgray"
                        android:textStyle="bold"
                        android:fontFamily="@font/advent_pro"
                        android:layout_margin="@dimen/medium_margin"
                        android:text="Ahora ya puedes jugar! pero recuerda puedes  regresar cuando lo necesites."/>

                    <Button
                        android:id="@+id/btn_home"
                        android:layout_width="200dp"
                        android:background="@drawable/rounded_shape_bluelight"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:text="Inicio"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</FrameLayout>