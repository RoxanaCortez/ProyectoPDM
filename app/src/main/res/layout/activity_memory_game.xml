        android:layout_height="70dp"
        android:layout_gravity="bottom|left"
        android:alpha="0.3"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/flower2_icon"/>






    <ImageView
