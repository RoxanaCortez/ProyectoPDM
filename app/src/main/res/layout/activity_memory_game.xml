<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Activities.MemoryGame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_parejas"
            android:text="Parejas: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_numparejas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"/>

        <TextView
            android:id="@+id/txt_puntosparejas"
            android:text="Puntos:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_numpuntos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center">

        <GridLayout
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_margin="8dp"
            android:columnCount="4"
            android:rowCount="4"
            android:useDefaultMargins="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="75dp">

            <ImageView
                android:id="@+id/img1"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill|top"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:background="@color/color_blue_light"
                android:padding="@dimen/small_margin"
                android:src="@drawable/carta_icon" />

            <ImageView
                android:id="@+id/img2"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill|top"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:background="@color/color_blue_light"
                android:padding="@dimen/small_margin"
                android:src="@drawable/carta_icon"/>

            <ImageView
                android:id="@+id/img3"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill|top"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:background="@color/color_blue_light"
                android:padding="@dimen/small_margin"
                android:src="@drawable/carta_icon" />

            <ImageView
                android:id="@+id/img4"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_gravity="fill|top"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:background="@color/color_blue_light"
                android:padding="@dimen/small_margin"
                android:src="@drawable/carta_icon" />

            <ImageView
                android:id="@+id/img5"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill|top"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:background="@color/color_blue_light"
                android:padding="@dimen/small_margin"
                android:src="@drawable/carta_icon" />

            <ImageView
                android:id="@+id/img6"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill|top"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:background="@color/color_blue_light"
                android:padding="@dimen/small_margin"
                android:src="@drawable/carta_icon" />

            <ImageView
                android:id="@+id/img7"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill|top"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:background="@color/color_blue_light"
                android:padding="@dimen/small_margin"
                android:src="@drawable/carta_icon" />

            <ImageView
                android:id="@+id/img8"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_gravity="fill|top"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:background="@color/color_blue_light"
                android:padding="@dimen/small_margin"
                android:src="@drawable/carta_icon" />

            <ImageView
                android:id="@+id/img9"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill|top"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:background="@color/color_blue_light"
                android:padding="@dimen/small_margin"
                android:src="@drawable/carta_icon" />

            <ImageView
                android:id="@+id/img10"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill|top"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:background="@color/color_blue_light"
                android:padding="@dimen/small_margin"
                android:src="@drawable/carta_icon" />

            <ImageView
                android:id="@+id/img11"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill|top"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:background="@color/color_blue_light"
                android:padding="@dimen/small_margin"
                android:src="@drawable/carta_icon" />

            <ImageView
                android:id="@+id/img12"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_gravity="fill|top"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:background="@color/color_blue_light"
                android:padding="@dimen/small_margin"
                android:src="@drawable/carta_icon" />

            <ImageView
                android:id="@+id/img13"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill|top"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:background="@color/color_blue_light"
                android:padding="@dimen/small_margin"
                android:src="@drawable/carta_icon" />

            <ImageView
                android:id="@+id/img14"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill|top"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:background="@color/color_blue_light"
                android:padding="@dimen/small_margin"
                android:src="@drawable/carta_icon" />

            <ImageView
                android:id="@+id/img15"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill|top"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:background="@color/color_blue_light"
                android:padding="@dimen/small_margin"
                android:src="@drawable/carta_icon" />

            <ImageView
                android:id="@+id/img16"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_gravity="fill|top"
