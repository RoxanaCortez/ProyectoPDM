<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Activities.MemoryGame"
    android:id="@+id/memory"
    android:background="@drawable/gradient_green">



    <ImageView
        android:layout_width="410dp"
        android:layout_height="300dp"
        android:layout_gravity="center|right"
        android:alpha="0.3"
        android:background="@drawable/mountains2_icon"/>


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:alpha="0.3"
        android:background="@drawable/giraffe2_icon"
        android:layout_marginBottom="130dp"
        android:layout_gravity="bottom|left"/>




    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:alpha="0.3"
        android:background="@drawable/palm2_icon"
        android:layout_gravity="bottom|right"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0.3"
        android:background="@drawable/monkey2_icon"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="10dp"
        />



    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|left"
        android:alpha="0.3"
        android:layout_marginBottom="100dp"
        android:background="@drawable/bee2_icon"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom|left"
        android:alpha="0.3"
