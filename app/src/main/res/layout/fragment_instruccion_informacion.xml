<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.InstruccionInformacion"
    android:background="@drawable/gradient_bg_help">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/small_margin"
        android:layout_margin="@dimen/big_margin"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="575dp"
            android:orientation="vertical"
            android:padding="@dimen/medium_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/intro2_icon"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="@dimen/medium_margin"
                />
            <ScrollView
                android:id="@+id/SCROLLER_ID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:fillViewport="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/darkgray"
                    android:textStyle="bold"
                    android:fontFamily="@font/bree_serif"
                    android:text="BRAINING \n\nOBJETIVO:\nLa app esta dieñada para que niños con dislexia puedan tener un una alternativa de juegos que les ayude con su dificultad.\n\nSe busca que el niño pueda diferenciar entre como se escriben palabras de manera correcta e incorrecta y poder distinguir ciertos caracteres de otros." />
            </ScrollView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>