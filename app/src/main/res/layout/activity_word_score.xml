<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.WordScore">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/correctas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Palabras correctas" />

    <TextView
        android:id="@+id/ncorrectas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/incorrectas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Palabras correctas" />

    <TextView
        android:id="@+id/nincorrectas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/puntaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntos obtenidos" />

    <TextView
        android:id="@+id/npuntaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <ImageButton
        android:id="@+id/btn_nueva"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end|bottom|center"
        android:layout_margin="@dimen/medium_margin"
        android:background="@drawable/home2_icon"
        android:tint="@color/darkgray"
        android:textColor="#fff" />

    <ImageButton
        android:id="@+id/btn_home2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end|bottom|center"
        android:layout_margin="@dimen/medium_margin"
        android:background="@drawable/home2_icon"
        android:tint="@color/darkgray"
        android:textColor="#fff" />
</LinearLayout>