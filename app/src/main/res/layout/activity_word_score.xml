<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Activities.WordScore"
    android:background="@drawable/gradient_green">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="top|center"
        android:alpha="0.6"
        android:background="@drawable/clouds_icon"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:alpha="0.3"
        android:background="@drawable/mountains_icon"
        android:layout_gravity="center
"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="end|bottom"
        android:alpha="0.2"
        android:background="@drawable/tree2_icon" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/medium_margin"
        android:background="@drawable/basket_icon"
        android:alpha="0.3"/>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="30dp"
            app:cardCornerRadius="@dimen/big_margin"
            android:alpha="0.9">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/medium_margim">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resultados"
                    android:gravity="center"
                    android:textColor="@color/color_red"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:fontFamily="@font/bree_serif"
                    android:layout_margin="@dimen/medium_margim"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/correctas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Palabras correctas:"
                        android:layout_margin="@dimen/medium_margim"
                        android:fontFamily="@font/bree_serif"
                        android:textSize="18sp"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/ncorrectas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:gravity="right"
                        android:fontFamily="@font/bree_serif"
                        android:layout_margin="@dimen/medium_margim"
                        android:textColor="@color/color_green"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/incorrectas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Palabras incorrectas:"
                        android:fontFamily="@font/bree_serif"
                        android:layout_margin="@dimen/medium_margim"
                        android:textSize="18sp"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/nincorrectas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:gravity="right"
                        android:layout_margin="@dimen/medium_margim"
                        android:fontFamily="@font/bree_serif"
                        android:textColor="@color/color_red"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>

                </LinearLayout>


                <Button
                    android:id="@+id/btn_nueva"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginLeft="@dimen/medium_margim"
                    android:alpha="0.8"
                    android:layout_marginRight="@dimen/small_margin"
                    android:background="@drawable/rounded_shape_red"
                    android:drawableLeft="@drawable/words_play_icon"
                    android:drawablePadding="@dimen/medium_margim"
                    android:fontFamily="@font/bree_serif"
                    android:layout_marginTop="50dp"
                    android:text="Jugar de nuevo"
                    android:gravity="center|left"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="16sp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_home2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/medium_margin"
        android:background="@drawable/home2_icon"
        android:tint="@color/darkgray"
        android:textColor="#fff" />
</FrameLayout>