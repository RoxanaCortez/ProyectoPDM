<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Introduccion"
    android:background="@drawable/gradient_bg_help">

     <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
         app:cardCornerRadius="@dimen/small_margin"
         android:clickable="true"
         android:foreground="?android:attr/selectableItemBackground"

            android:layout_margin="32dp"
         android:elevation="24dp">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@drawable/intro2_icon"
                 android:layout_gravity="center"
                 android:layout_marginTop="32dp"
                 android:layout_marginBottom="@dimen/medium_margin"
                 />

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="@dimen/medium_margin"
                 android:text="Digitar que es la dislexia? porque se da? tipos? como tratarlo? (por ejemplo los ejrcicios asi como los juegos nuestros)etc.. "
                 android:textColor="#646464"
                 android:textStyle="bold"
                 android:lines="10"
                 android:textSize="18sp"
                 app:fontFamily="@font/advent_pro" />


         </LinearLayout>






        </android.support.v7.widget.CardView>





</FrameLayout>