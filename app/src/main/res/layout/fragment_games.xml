<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Games"
    android:background="@drawable/gradient_bg_home2">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="bottom"
        android:background="@drawable/games3_icon"
        />

    <!--Estos botones solo editarlos-->

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">



</LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/big_margin"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/small_margin"
        android:alpha="0.8"
        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:text="Juegos"
                android:layout_gravity="center"
                android:textColor="#F81A00"
                android:textSize="35sp"
                app:fontFamily="@font/bree_serif" />


            <at.markushi.ui.CircleButton
                android:id="@+id/btn_word"
                android:layout_width="128dp"
                android:layout_height="128dp"
                app:cb_color="#E40101"
                android:layout_gravity="center"
                app:cb_pressedRingWidth="16dp"
                android:src="@drawable/words_game_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bree_serif"
                android:text="SÃ­labas"
                android:textSize="18sp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:textColor="#C00303"
                android:layout_gravity="center"/>

            <at.markushi.ui.CircleButton
                android:id="@+id/btn_memory"
                android:layout_width="128dp"
                android:layout_height="128dp"
                app:cb_color="#349A00"
                android:layout_gravity="center"
                app:cb_pressedRingWidth="16dp"
                android:src="@drawable/memory_game_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bree_serif"
                android:text="Memoria"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#349A00"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/salir"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="@dimen/medium_margim"
        android:background="@drawable/back_icon"/>

</FrameLayout>