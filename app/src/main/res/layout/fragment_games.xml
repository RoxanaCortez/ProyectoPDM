<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Games"
    android:background="@drawable/gradient_bg_home2">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="bottom"
        android:background="@drawable/games3_icon"
        />

    <!--Estos botones solo editarlos-->

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">



</LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/big_margin"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/small_margin"
        android:alpha="0.8"
        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="50dp"
                android:text="Juegos"
                android:layout_gravity="center"
                android:textColor="#3FC300"
                android:textSize="35sp"
                app:fontFamily="@font/bree_serif" />

            <Button
                android:id="@+id/btn_word"
                android:layout_width="200dp"
                android:background="@drawable/rounded_shape_red"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:fontFamily="@font/bree_serif"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Palabras"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_memory"
                android:layout_width="200dp"
                android:background="@drawable/rounded_shape_red"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0.9"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="Memoria"
                android:fontFamily="@font/bree_serif"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:layout_margin="@dimen/big_margin"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>